{
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "regions": ["sfo1"],
  "rewrites": [
    {
      "source": "/card/(natalia|virginia)",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "(?i)(whatsapp|telegram|facebookexternalhit|twitterbot|slackbot|discord|linkedin)"
        }
      ],
      "destination": "/api/og/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/og/*.jpg",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, s-maxage=31536000, immutable"
        }
      ]
    },
    {
      "source": "/og/card-*.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, s-maxage=600"
        }
      ]
    }
  ]
} 